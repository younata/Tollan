<div class="center jumbotron">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1><%= @bulb.name %></h1>
      <%= form_for(:bulb, method: :put, class: 'form-horizontal') do |f| %>
        <div class="form-group">
          <%= f.label :Name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :On, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.check_box :on, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :Brightness, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.range_field :bri, in: 1..100, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :Color, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.color_field :rgb, class: 'form-control' %>
          </div>
        </div>

<% if false %>
TODO: find a better way to present this to the user
        <%= f.label :Color_Temperature, class: 'control-label' %>
        <%= f.text_field :color_temp, class: 'form-control' %>
<% end %>

        <div class="form-group">
          <%= f.label :Transition_time, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :transitiontime, class: 'form-control' %>
          </div>
        </div>

        <%= f.submit "Update", class: "btn btn-primary", method: :put %>
      <% end %>
    </div>
  </div>
</div>

